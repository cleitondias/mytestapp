<mvc:View
    controllerName="demorounting.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.ui.layout.form"
    xmlns="sap.m"
	busyIndicatorDelay="0">
		<Page id="detailPage" 
		      title="Detail View" 
			  showNavButton="true" 
			  navButtonPress="onNavBack">
			<content>
              <Panel
				  id="employeePanel"
				  width="auto"
				  class="sapUiNoContentPadding">
				 <headerToolbar>
					<Toolbar>
						<Title text="Product Id : {ID}" level="H2"/>
						<ToolbarSpacer />
					</Toolbar>
				 </headerToolbar>
				 <content>
					 <f:SimpleForm
							editable="true"
							layout="ResponsiveGridLayout"
							labelSpanL="3" labelSpanM="3" emptySpanL="4" emptySpanM="4"
							columnsL="1" columnsM="1">
							<f:content>
								<Label text="Product Id"/>
								<Text text="{ID}"/>
								<Label text="Name of Product"/>
								<Text text="{Name}"/>
								<Label text="Description"/>
								<Text text="{Description}"/>
								<Label text="Release Date"/>
								<Text text="{ReleaseDate}"/>
							</f:content>
					 </f:SimpleForm>
				  </content>
			  </Panel>        
          </content>
		</Page>		
</mvc:View>
